unit TestuInscricaoCMD;
{

  Delphi DUnit Test Case
  ----------------------
  This unit contains a skeleton test case class generated by the Test Case Wizard.
  Modify the generated code to correctly setup and call the methods from the unit
  being tested.

}

interface

uses
  TestFramework, FireDAC.Phys.SQLite, Vcl.Imaging.pngimage, Vcl.Dialogs,
  Winapi.Windows, Vcl.StdCtrls, Data.DB, Vcl.Forms, Vcl.Graphics, System.Variants,
  uInscricao, FireDAC.Phys, FireDAC.Comp.Client, FireDAC.Stan.ExprFuncs, Vcl.Grids,
  Vcl.DBGrids, Winapi.Messages, System.SysUtils, Vcl.Controls, Vcl.ExtCtrls,
  FireDAC.Stan.Intf, FireDAC.Phys.SQLiteDef, FireDAC.Phys.SQLiteWrapper.Stat,
  System.Classes;

type
  // Test methods for class TfrmInscricao

  TestTfrmInscricao = class(TTestCase)
  strict private
    FfrmInscricao: TfrmInscricao;
  public
    procedure SetUp; override;
    procedure TearDown; override;
  published
    procedure TestVerificaRN01;
    procedure TestVerificaRN02;
  end;

implementation

procedure TestTfrmInscricao.SetUp;
begin
  FfrmInscricao := TfrmInscricao.Create(nil);
end;

procedure TestTfrmInscricao.TearDown;
begin
  FfrmInscricao.Free;
  FfrmInscricao := nil;
end;

procedure TestTfrmInscricao.TestVerificaRN01;
var
  ReturnValue: Boolean;
  limite_credito, id_aluno: Integer;
begin
  // Teste em que o aluno atingiu o limite de crédto
  id_aluno := 63;
  ReturnValue := FfrmInscricao.VerificaRN01(id_aluno, limite_credito);
  CheckEquals(False, ReturnValue, 'A verificação da RN01 não foi bem sucedida.');

  // Teste em que o aluno ainda possui crédto para utlizar
  id_aluno := 3;
  ReturnValue := FfrmInscricao.VerificaRN01(id_aluno, limite_credito);
  CheckEquals(False, ReturnValue, 'A verificação da RN01 não foi bem sucedida.')
end;

procedure TestTfrmInscricao.TestVerificaRN02;
var
  ReturnValue: Boolean;
  id_disciplina : Integer;
begin
  // Teste em que a disciplina está com a turma cheia
  id_disciplina := 18;
  ReturnValue := FfrmInscricao.VerificaRN02(id_disciplina);
  CheckEquals(False, ReturnValue, 'A verificação da RN02 não foi bem sucedida.');

  // Teste em que a disciplina não está com a turma cheia
  id_disciplina := 15;
  ReturnValue := FfrmInscricao.VerificaRN02(id_disciplina);
  CheckEquals(True, ReturnValue, 'A verificação da RN02 não foi bem sucedida.');

end;

initialization
  // Register any test cases with the test runner
  RegisterTest(TestTfrmInscricao.Suite);
end.

